# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Session Configuration (Required)
SESSION_SECRET=your_very_secure_random_session_secret_at_least_64_characters_long

# Email Configuration (Optional - for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SMS Configuration (Optional - for phone verification)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Google Sheets Integration (Optional - for live property data)
GOOGLE_CLIENT_EMAIL=your_google_service_account_email
GOOGLE_PRIVATE_KEY=your_google_service_account_private_key
GOOGLE_SHEETS_ID=your_google_sheets_id

# PayPal Configuration (Optional - for payment processing)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret